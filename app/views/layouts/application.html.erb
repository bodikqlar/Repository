<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= javascript_include_tag "application"%>
  <%= stylesheet_link_tag 'application' %>
 
</head>


<body>
<div id="user_nav">
  <% if current_user %>

    Logged in as <%= current_user.email %>.
    <%= link_to "Log out", log_out_path ,:class => 'btn btn-primary'%>
    <!-- Button trigger modal -->
<button class="btn btn-primary " data-toggle="modal" data-target="#myModal">
  Edit user
</button>
    <!-- Button trigger modal -->
<%= render "users/modal"%>



  <% elsif current_admin %>

    Logged in as <%= current_admin.email %>.
    <%= link_to "Log out", log_out_path,:class => 'btn btn-primary' %>
     <!-- Button trigger modal -->

<%= link_to "Profile", "/admins/#{current_admin.id}" ,:class => 'btn btn-primary' %>


    <!-- Button trigger modal -->


  <%if current_admin.type=="SuperAdmin"%>
    <%= link_to "Add_admin", sign_up_admin_path ,:class => 'btn btn-primary'%>
   <%end%>
  <% else %>
    <%= link_to "Sign up", sign_up_path ,:class => 'btn btn-primary'%> or
    <%= link_to "log in", log_in_path ,:class => 'btn btn-primary' %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%=yield%>
</body>
</html>

